# Together AI (Free Tier - 5M tokens/month)
TOGETHER_API_KEY=your_together_api_key_here
# Get free key: https://api.together.xyz

# Hugging Face (Free Inference API)
HUGGINGFACE_API_KEY=hf_your_huggingface_token_here
# Get free key: https://huggingface.co/settings/tokens

# Google Gemini (Free Tier - 60 requests/min)
GOOGLE_AI_API_KEY=AIza_your_google_ai_key_here
# Get free key: https://makersuite.google.com/app/apikey

# --- PREMIUM AI MODELS (Optional) ---
# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Claude 3)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# --- VOICE SERVICES ---
# ElevenLabs (Voice Synthesis - Free tier available)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# --- SEARCH & RESEARCH (For GenSpark Features) ---
# Brave Search (Best for research - Free tier)
BRAVE_SEARCH_API_KEY=BSA_your_brave_key_here
# Get free key: https://brave.com/search/api/

# Serper (Google Search API - Free 2500 queries)
SERPER_API_KEY=your_serper_api_key_here
# Get free credits: https://serper.dev

# Tavily (AI Research - Free tier)
TAVILY_API_KEY=tvly_your_tavily_key_here
# Get free key: https://tavily.com

# --- LOCAL AI MODELS (Optional but Recommended) ---
# Ollama endpoint (run models locally for free)
OLLAMA_ENDPOINT=http://localhost:11434
# Install: https://ollama.ai

# LM Studio endpoint (GUI for local models)
LMSTUDIO_ENDPOINT=http://localhost:1234
# Install: https://lmstudio.ai

# --- SERVER CONFIGURATION ---
PORT=4000
FRONTEND_URL=http://localhost:5173
NODE_ENV=development

# --- SECURITY ---
JWT_SECRET=your-random-jwt-secret-here

# --- DATABASE (Optional for persistence) ---
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost:5432/flowstate

# --- WEB3 (Optional) ---
IPFS_API_URL=http://localhost:5001
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-rpc.com

# --- AGENT CONFIGURATION ---
# Maximum reasoning steps for super agent
MAX_AGENT_STEPS=10

# Agent timeout (milliseconds)
AGENT_TIMEOUT=60000

# Enable/disable features
ENABLE_CODE_EXECUTION=true
ENABLE_WEB_SCRAPING=true
ENABLE_VOICE=true
ENABLE_RESEARCH=true

