# Server Configuration
PORT=3000
NODE_ENV=development

# AI API Keys (Get from respective providers)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_AI_API_KEY=your-google-ai-key

# Web3 Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
WALLET_PRIVATE_KEY=your-wallet-private-key-for-server

# Voice APIs
ELEVENLABS_API_KEY=your-elevenlabs-key
GOOGLE_TTS_KEY=your-google-tts-key

# Search API (for GenSpark-like functionality)
SERPER_API_KEY=your-serper-key
BRAVE_API_KEY=your-brave-search-key

# Storage
IPFS_GATEWAY=https://ipfs.io/ipfs/
NFT_STORAGE_KEY=your-nft-storage-key

# Optional Features
ENABLE_VOICE=true
ENABLE_WEB3=true
ENABLE_SEARCH=true
